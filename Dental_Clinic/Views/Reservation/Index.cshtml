
@{
    ViewData["Title"] = "Index";
}
@model   ICollection<Dental_CLinic.BLL.ViewModels.ReservationVM>
<h2>Index</h2>
<div class="col-md-3">
    <a class="w-100" asp-controller="Reservation" asp-action="Add"><button class="btn btn-primary w-100">Add</button></a>
</div>

<table class="table">

    <tbody>


        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col"># ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Client Id</th>
                    <th scope="col">Reservation Date</th>
                    <th scope="col">Update</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Id</td>
                        <td>@item.Price</td>
                       
                        <td>@item.ReservationDate</td>
                        <td>  <a asp-route-Id="@item.Id" asp-controller="Client" asp-action="Edit"> <button class="btn btn-info">Update</button> </a></td>
                        <td> <a asp-route-Id="@item.Id"> <button class="btn btn-danger">Delte</button> </a></td>
                    </tr>
                }


            </tbody>
        </table>



    </tbody>
</table>


